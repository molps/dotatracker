<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@android:color/white</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="autoCompleteTextViewStyle">@style/MyAutoCompleteTextViewStyle</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>


    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">

        <item name="closeIcon">@drawable/ic_close_white_24dp</item>
        <item name="searchHintIcon">@drawable/ic_search_white_18dp</item>
    </style>

    <style name="MyAutoCompleteTextViewStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

<!--Style za uklanjanje animacije kada se prelazi iz Activity u Activity-->
    <style name="MyAppTheme" parent="AppTheme">

        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="SearchThemeStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!--  <item name="android:editTextColor">@color/colorAccent</item>
                  ^^ ovo se koristi za boju edittexta u searchview
                  P.S. ja sam ga koristio za searchview, verovatno je za sve-->

        <item name="colorPrimary">@color/colorPrimarySearch</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSearch</item>
        <item name="colorAccent">@color/accent</item>

    </style>











</resources>
